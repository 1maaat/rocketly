<div class="container">
  <div class="d-flex justify-content-around">
    <div id="avatar-username-user">
      <div class="avatar-user">
          <label class="-label" for="file">
            <%# <span class="glyphicon glyphicon-camera"></span> %>
            <span>Change Image</span>
          </label>
            <%= simple_form_for(current_user, as: User, url: registration_path(current_user), html: { id: "user-pic-form", method: :put }) do |f| %>
          <div id="input-user-pic">
            <%= f.input :photo, as: :file %>
          </div>
            <% end %>
          <div>
            <%= cl_image_tag current_user.avatar_if_present, height:170, id:"output" %>
            <button id="fake-input">ðŸ“·</button>
          </div>
        <div><button id="fake-update">Save</button></div>
      </div>
      <div id="user-details">
        <h3><%= current_user.username %></h3>
        <p><%= current_user.email %></p>
        <p><%= current_user.country %></p>
      </div>
    </div>
    <div id="links-description-user">
      <div class="links-user d-flex">
        <div id="links-user-left">
          <p><strong>Website :</strong> <%= current_user.website_url %></p>
          <p><strong>Facebook :</strong> <%= current_user.facebook_url %></p>
          <p><strong>Twitter :</strong> <%= current_user.twitter_url %></p>
          <p><strong>Instagram :</strong> <%= current_user.instagram_url %></p>
          <p><strong>Spotify :</strong> <%= current_user.spotify_url %></p>
        </div>
        <div id="links-user-right">
          <p><strong>YouTube :</strong> <%= current_user.youtube_url %></p>
          <p><strong>Dribble :</strong> <%= current_user.dribbble_url %></p>
          <p><strong>ArtStation :</strong> <%= current_user.artstation_url %></p>
          <p><strong>Behance :</strong> <%= current_user.behance_url %></p>
        </div>
      </div>
      <div>
        <h1><strong>What about me ?</strong></h1>
        <p><%= current_user.description %></p>
      </div>
    </div>
  </div>
</div>
