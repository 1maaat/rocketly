<% @artworks.each do |artwork| %>
  <div class="card-product">
    <%= link_to challenge_artwork_path(artwork.challenge, artwork) do %>
      <div class="artwork-contribution">
        <% if artwork.files.attached? %>
          <%= cl_image_tag artwork.files.first.key %>
        <% end %>
        <p id="name-challenge"><%= artwork.challenge.name %></p>
        <div id="empty-opacity"></div>
      </div>
      <div class="card-product-infos">
        <p><%= artwork.title.upcase %></p>
      </div>
    <% end %>

  </div>
<% end %>
