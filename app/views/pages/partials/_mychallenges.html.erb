<% @challenges.each do |challenge| %>
  <h4><%= link_to challenge_path(challenge) do %></h4>
    <div class="card-product" style="text-decoration:none;">
      <div>
        <% if challenge.photo.attached? %>
          <%= cl_image_tag challenge.photo.key %>
        <% end %>
      </div>
      <div class="card-product-infos">
        <p><%= challenge.name.upcase %></p>
      </div>
    </div>
  <% end %>
<% end %>
