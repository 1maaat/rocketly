<h1>Challenges</h1>
<div class="container">
  <% @challenges.each do |challenge| %>
    <div class="card">
      <%= link_to challenge_path(challenge), style: "text-decoration: none" do %>
        <%=image_tag("6.jpeg")%>
        <div class="card-header">
          <p><%= challenge.name %></p>
        </div>
        <div class="card-body">
          <p><%= challenge.description %></p>
          <p><%= challenge.reward %></p>
          <p><%= challenge.start_date %></p>
          <p><%= challenge.end_date %></p>
          <p><%= challenge.status %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


<ul class="nav nav-tabs">
  <li class="nav-item">
    <h4><%= link_to "Draft", params[:filter].present? ? challenges_path : challenges_path(filter: 0) %></h4>
  </li>
  <li class="nav-item">
    <h4><%= link_to "In progress", params[:filter].present? ? challenges_path : challenges_path(filter: 1) %></h4>
  </li>
  <li class="nav-item">
    <h4><%= link_to "Vote", params[:filter].present? ? challenges_path : challenges_path(filter: 2) %></h4>
  </li>
  <li class="nav-item">
    <h4><%= link_to "Ended", params[:filter].present? ? challenges_path : challenges_path(filter: 3) %></h4>
  </li>
</ul>
