<h1>Challenges</h1>
<div class="container">
    <% @challenges.each do |challenge| %>
    <div class="card">
      <div class="card-header">
        <p><%= challenge.name %></p>
        </div>
          <div class="card-body">
            <p><%= challenge.description %></p>
            <p><%= challenge.reward %></p>
            <p><%= challenge.start_date %></p>
            <p><%= challenge.end_date %></p>
            <p><%= challenge.status %></p>
        </div>
    </div>
  <% end %>
</div>
