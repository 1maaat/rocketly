<img src="../assets/images/6.jpg" alt="">
<div class="container">
  <div class="wrapper-challenge d-flex justify-content-around">
    <div class="card-creator-details">
      <div class="d-flex align-items-center creator-boxes">
        <% if @challenge.photo.attached? %>
          <%= cl_image_tag @challenge.photo.key, height:170 %>
        <% else %>
          <%= image_tag 'avatar', class: 'avatar-large' %>
        <% end %>
        <div class="align-items-center">
          <h3><%= @challenge.user.username %></h3>
          <p><%= @challenge.user.country %></p>
        </div>
      </div>
      <div class="creator-boxes">
        <div>
          <h5>What about me ?</h5>
          <p><%= @challenge.user.description %></p>
        </div>
        <div class="tags">
          <ul class="list-inline user-activities-list">
            <% @challenge.user.user_activities.each do |user_activity| %>
              <li class="list-inline-item"><%= user_activity.activity.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div id="social-media">
        <ul class="list-inline d-flex justify-content-around">
          <%= render 'shared/socialmedia' %>
        </ul>
      </div>
    </div>
    <div class="cards-challenge">
      <div class="card-challenge-details">
        <h2><strong><%= @challenge.name %></strong></h2>
        <p><%= @challenge.description %></p>
        <p><i class="fas fa-gift"></i> <%= @challenge.reward %></p>
        <p>Status : <%= @challenge.status.capitalize %></p>
        <p><%=@artworks.count %> contributors</p>
        <%= render 'shared/progressionbar' %>
      </div>
    </div>
  </div>
  <h2 class="mt-3" style="text-align:center">Contributions</h2>
  <div class="card-artworks-list">
    <section class="card-list" id="artwork-list">
      <% @artworks.each do |artwork| %>
        <article class="card-artwork" data-toggle="modal" data-target="#artworkDetails">
          <header class="card-header">
            <p><%= artwork.created_at.strftime("%e %b %Y") %></p>
            <h2><%= artwork.title %></h2>
          </header>
          <div id="artwork">
            <% if artwork.files.attached? %>
              <%= cl_image_tag artwork.files.key %>
            <% else %>
              <%= image_tag '6' %>
            <% end %>
          </div>
          <div class="card-author">
            <a class="author-avatar" href="#">
              <% if @challenge.user.photo.attached? %>
                <%= cl_image_tag @challenge.user.photo.key %>
              <% else %>
                <%= image_tag 'avatar' %>
              <% end %>
            </a>
            <svg class="half-circle" viewBox="0 0 106 57">
              <path d="M102 4c0 27.1-21.9 49-49 49S4 31.1 4 4"></path>
            </svg>

            <div class="author-name">
              <div class="author-name-prefix"><%= artwork.user.username %></div>
            </div>
          </div>
        </article>
        <!-- Artwork Details Modal -->
        <div class="modal fade" id="artworkDetails" tabindex="-1" aria-labelledby="artworkDetailsLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="artworkDetailsLabel"><%= artwork.title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <%= image_tag asset_path('6.jpeg') %>
              <div class="modal-body">
                <%= artwork.description %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
