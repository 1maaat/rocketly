<div data-controller="artwork-modal">
  <!--fieldsets-->
  <%= simple_form_for([ challenge, artwork ], data: { artwork_modal_target: 'form', action: 'submit->artwork-modal#send' }) do |f| %>
    <div class="step step-1 index stepactive" data-artwork-modal-target="slide">
      <div class="form-group" id="first-page-form">
      <h1 class="mt-3 mb-3">Detail your contribution</h1>
          <%= f.input :title,
            input_html: { class: 'texts-input' },
            placeholder: "Give a title to your masterpiece",
            label: false %>
          <%= f.input :description,
            input_html: { class: 'texts-input' },
            placeholder: "Tell us more about your work",
            label: false %>
          <div id="next-btn-div">
            <%= f.button :button, "Next",
              class: "next-btn",
              disabled: true %>
          </div>
      </div>
    </div>

    <div class="step step-2 index" data-artwork-modal-target="slide">
      <div class="form-group" id="second-page-form">
          <div id="div_photo">
            <%= f.input :files, as: :file,
              input_html: { class: 'd-none', id: 'files-input'},
              label_html: { class: 'upload-files'},
              label: "Upload file" %>
            <div id="photo-preview">
              <%= image_tag "", width: 300, class: "hidden", id: "files-preview" %>
            </div>
            <div id="prev-sub-btn">
              <%= f.button :button, "Previous", class: "previous-btn"  %>
              <%= f.submit "Create Artwork",
                id: "submit-alert",
                class: "submit-btn",
                remote: true,
                disabled: true %>
            </div>
          </div>
      </div>
    </div>
  <% end %>

  <div class="step step-3 index" data-artwork-modal-target="slide finalSlide" >

  </div>

</div>
